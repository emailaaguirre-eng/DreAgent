# Lea Assistant Configuration
# Copy this file to .env and fill in your values

# Agent and User Names (for easy deployment to other users)
LEA_AGENT_NAME=Lea
LEA_USER_NAME=Dre

# Project directory
LEA_PROJECT_DIR=F:/Dre_Programs/LeaAssistant

# Backup directories
LEA_BACKUP_DIR_F=F:/LeaAssistant_Backups
LEA_BACKUP_DIR_ICLOUD=iCloudDrive/Dre_Program_Files

# API Keys (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Optional API Keys
SERPAPI_API_KEY=your_serpapi_key_here

# Outlook OAuth (if using Outlook features)
OUTLOOK_CLIENT_ID=your_outlook_client_id
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret
OUTLOOK_TENANT_ID=your_outlook_tenant_id

