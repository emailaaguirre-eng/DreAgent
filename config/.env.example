# Application Settings
APP_NAME=Hummingbird-LEA
APP_ENV=development
DEBUG=true
SECRET_KEY=change-this-to-a-random-string-in-production

# Server Settings
HOST=0.0.0.0
PORT=8000

# Ollama Settings (Local AI)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL_CHAT=llama3.1:8b
OLLAMA_MODEL_CODE=deepseek-coder:6.7b
OLLAMA_MODEL_VISION=llava-llama3:8b
OLLAMA_MODEL_EMBED=nomic-embed-text

# Authentication (CHANGE THESE!)
ADMIN_USERNAME=dre
ADMIN_PASSWORD=changeme123
JWT_SECRET_KEY=change-this-jwt-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/hummingbird.db

# File Storage
UPLOAD_DIR=./data/uploads
KNOWLEDGE_DIR=./data/knowledge
MAX_UPLOAD_SIZE_MB=50

# Agent Settings
DEFAULT_AGENT=lea
MAX_CONVERSATION_HISTORY=50
CONFIDENCE_THRESHOLD=0.85

# Optional: Cloud AI Fallback (leave empty to disable)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Logging
LOG_LEVEL=INFO
