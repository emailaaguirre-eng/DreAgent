# =============================================================================
# HUMMINGBIRD-LEA - Production Environment Configuration
# Powered by CoDre-X | B & D Servicing LLC
# =============================================================================
# IMPORTANT: This file contains sensitive configuration.
# - Copy to .env on your production server
# - Change ALL default values, especially secrets
# - Restrict file permissions: chmod 600 .env
# =============================================================================

# Application Settings
APP_NAME=Hummingbird-LEA
APP_ENV=production
DEBUG=false
# IMPORTANT: Generate a secure random string (32+ characters)
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS

# Server Settings
# Use 127.0.0.1 when behind Nginx reverse proxy
HOST=127.0.0.1
PORT=8000

# Ollama Settings (Local AI)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL_CHAT=llama3.1:8b
OLLAMA_MODEL_CODE=deepseek-coder:6.7b
OLLAMA_MODEL_VISION=llava-llama3:8b
OLLAMA_MODEL_EMBED=nomic-embed-text
OLLAMA_TIMEOUT=180

# Authentication (CHANGE THESE - USE STRONG PASSWORDS!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
# IMPORTANT: Generate a secure random string (32+ characters)
JWT_SECRET_KEY=CHANGE_THIS_TO_A_DIFFERENT_SECURE_RANDOM_STRING
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=8

# Database
# Use absolute path in production
DATABASE_URL=sqlite+aiosqlite:///var/lib/hummingbird/hummingbird.db

# File Storage (use absolute paths in production)
UPLOAD_DIR=/var/lib/hummingbird/uploads
KNOWLEDGE_DIR=/var/lib/hummingbird/knowledge
MEMORY_DIR=/var/lib/hummingbird/memory
TEMPLATES_DIR=/var/lib/hummingbird/templates
MAX_UPLOAD_SIZE_MB=50

# Agent Settings
DEFAULT_AGENT=lea
MAX_CONVERSATION_HISTORY=50
CONFIDENCE_THRESHOLD=0.85
MAX_REASONING_STEPS=10

# Optional: Cloud AI Fallback (leave empty to disable)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Logging
LOG_LEVEL=WARNING
LOG_FILE=/var/log/hummingbird/hummingbird.log

# =============================================================================
# Security Settings (Production Only)
# =============================================================================

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST=10
RATE_LIMIT_BLOCK_MINUTES=15

# Session Settings
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=strict

# CORS - Restrict to your domain
CORS_ORIGINS=https://yourdomain.com

# =============================================================================
# Performance Settings
# =============================================================================

# Cache Settings
CACHE_MAX_SIZE=5000
CACHE_DEFAULT_TTL=300
EMBEDDING_CACHE_SIZE=10000
EMBEDDING_CACHE_TTL=3600

# Worker Settings (for gunicorn/uvicorn)
WORKERS=4
WORKER_CONNECTIONS=1000
WORKER_TIMEOUT=120
